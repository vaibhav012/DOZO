<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vv.game.vaibhav.tiles.DOZO">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/gameName"
        android:src="@drawable/tiles"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-20dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/game"
        android:background="@drawable/play"
        android:visibility="visible"
        android:translationZ="10dp"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/score"
        android:background="@drawable/score"
        android:visibility="visible"
        android:layout_below="@+id/linearLayout"
        android:layout_toLeftOf="@+id/game"
        android:layout_toStartOf="@+id/game" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/leaderboard"
        android:background="@drawable/leaderboard"
        android:visibility="visible"
        android:layout_alignTop="@+id/score"
        android:layout_toRightOf="@+id/game"
        android:layout_toEndOf="@+id/game" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/practice"
        android:background="@drawable/practice"
        android:visibility="visible"
        android:layout_below="@+id/score"
        android:layout_toLeftOf="@+id/game"
        android:layout_toStartOf="@+id/game" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/help"
        android:background="@drawable/help"
        android:visibility="visible"
        android:layout_alignTop="@+id/practice"
        android:layout_toRightOf="@+id/game"
        android:layout_toEndOf="@+id/game" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/leaderboard"
        android:layout_toStartOf="@+id/leaderboard"
        android:id="@+id/linearLayout"
        android:visibility="invisible"></LinearLayout>

</RelativeLayout>
